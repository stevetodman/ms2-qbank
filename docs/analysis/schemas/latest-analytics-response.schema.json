{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Latest Analytics Response",
  "type": "object",
  "required": [
    "generated_at",
    "metrics",
    "artifact"
  ],
  "properties": {
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp indicating when the analytics snapshot was generated."
    },
    "metrics": {
      "$ref": "./question-metrics.schema.json"
    },
    "artifact": {
      "type": "object",
      "required": [
        "json_path",
        "markdown_path"
      ],
      "properties": {
        "json_path": {
          "type": "string",
          "description": "Relative path to the JSON artifact within data/analytics." 
        },
        "markdown_path": {
          "type": "string",
          "description": "Relative path to the markdown artifact within data/analytics."
        }
      }
    }
  }
}
